{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "jquery": true,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "linebreak-style": 0,
    "semi": 2,
    "indent": ["error", 2],
    "prettier/prettier": ["error", { "singleQuote": true }],
    "space-before-function-paren": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "func-names": ["error", "never"],
    "no-unused-vars": 0
  },
  "plugins": ["prettier"],
  "extends": "airbnb"
}
